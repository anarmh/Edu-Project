@model CourseDetailVM
@{
    ViewData["Title"] = "Detail";
}

<div class="container-fluid my-5">
    <div class="row">
        <div class="col-6">
            <img  src="~/img/@Model.CourseImgs.FirstOrDefault().ImgUrl" style="width:100%;height:100%;" />
        </div>
        <div class="col-6 d-flex flex-column justify-content-evenly">
            <h3>Price: $@Model.Price</h3>
            <h4>Description: @Model.Description</h4>
            <h5>Capacity: @Model.Capacity</h5>
        </div>
    </div>
    <a asp-action="Index" class="btn btn-primary d-block mt-3">Back</a>
</div>

